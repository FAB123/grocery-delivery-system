<body class="hold-transition lockscreen">
    <!-- Automatic element centering -->
    <div class="lockscreen-wrapper">
        <div class="lockscreen-logo">
            <b>Grocery Delivery System</b>
        </div>
        <!-- User name -->
        <div class="lockscreen-name">{{data.name}}</div>

        <!-- START LOCK SCREEN ITEM -->
        <div class="lockscreen-item">
            <!-- lockscreen image -->
            <div class="lockscreen-image">
                <img src="../admin/dist/img/user1-128x128.jpg" alt="User Image">
            </div>
            <!-- /.lockscreen-image -->

            <!-- lockscreen credentials (contains the form) -->
            <form class="lockscreen-credentials" action="lockscreen" method="POST">
                <input type="hidden" name="mobile" value="{{data.mobile}}" class="form-control" placeholder="password">
                <div class="input-group">
                    <input type="password" class="form-control" name="password" placeholder="password">

                    <div class="input-group-append">
                        <button type="submit" class="btn">
                            <i class="fas fa-arrow-right text-muted"></i>
                        </button>
                    </div>
                </div>
            </form>
            <!-- /.lockscreen credentials -->

        </div>

        <!-- /.lockscreen-item -->
        <div class="help-block text-center">
            {{#if loginStatus.error}}
               <p class="text-danger d-flux">{{loginStatus.message}}</p>
            {{/if}}
            Enter your password to retrieve your session
        </div>
        <div class="text-center">
            <a href="login">Or sign in as a different user</a>
        </div>
        <div class="lockscreen-footer text-center">
            Copyright &copy; 2014-2020 <b><a href="https://adminlte.io" class="text-black">AdminLTE.io</a></b><br>
            All rights reserved
        </div>
    </div>

    <!-- /.center -->