{{>admin-sidebar}}
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <!-- left column -->
      <div class="col-md-12 center-block">
        <div class="card card-info">
          <div class="card-header">
            <h3 class="card-title">Edit Store</h3>
          </div>
          <!-- /.card-header -->
          <!-- form start -->
          <form class="form-horizontal" id="editStore/{{storeData._id}}" method="POST">
            <div class="card-body">
              <div class="form-group row">
                <label for="storename" class="col-sm-2 col-form-label">Store Name</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" name="storename" value="{{storeData.storename}}"
                    placeholder="Store Name">
                </div>
              </div>

              <div class="form-group row">
                <label for="company" class="col-sm-2 col-form-label">Company Name</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" name="companyname" value="{{storeData.companyname}}"
                    placeholder="Company Name">
                </div>
              </div>

              <div class="form-group row">
                <label for="address" class="col-sm-2 col-form-label">Address</label>
                <div class="col-sm-10">
                  <textarea class="form-control" name="address" rows="3"
                    placeholder="Address ...">{{storeData.address}}</textarea>
                </div>
              </div>

              <div class="form-group row">
                <label for="mobile" class="col-sm-2 col-form-label">Mobile</label>
                <div class="input-group col-sm-10">
                  <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                  </div>
                  <input type="text" name="mobile" value="{{storeData.mobile}}" class="form-control">
                </div>
              </div>

              <div class="form-group row">
                <label for="vat_number" class="col-sm-2 col-form-label">VAT Number</label>
                <div class="col-sm-10">
                  <input type="number" class="form-control" name="vat_number" value="{{storeData.vat_number}}"
                    placeholder="VAT Number">
                </div>
              </div>
                <div class="form-group row">
                <div class="col-sm-6">
                  <label for="opening_time">Opening Time:</label>
                  <div class="input-group date" id="id_opening_time">
                    <input type="text" name="opening_time" value="{{storeData.opening_time}}" class="form-control" placeholder="End time"
                      title="" required id="opening_time" />
                    <div class="input-group-addon input-group-append">
                      <div class="input-group-text">
                        <i class="glyphicon glyphicon-time far fa-clock"></i>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-sm-6">
                  <label for="closing_time">Closing Time:</label>
                  <div class="input-group date" id="id_end_time">
                    <input type="text" name="closing_time" value="{{storeData.closing_time}}" class="form-control" placeholder="End time"
                      title="" required id="closing_time" />
                    <div class="input-group-addon input-group-append">
                      <div class="input-group-text">
                        <i class="glyphicon glyphicon-time far fa-clock"></i>
                      </div>
                    </div>
                  </div>
                </div>

              </div>

              <div class="form-group row">
                <label for="contactpage" class="col-sm-12 col-form-label">Contact Page</label>
                <div class="col-sm-12">
                  <textarea class="form-control" name="contactpage" rows="8"
                    placeholder="Contact Page (Use HTML)">{{storeData.contactpage}}</textarea>
                </div>
              </div>

              {{!-- <div class="form-group row">
                <label for="active" class="col-sm-2 col-form-label">Active</label>
                <div class="col-sm-10">
                  <input type="checkbox" name="active" checked data-bootstrap-switch data-on-text="Active"
                    data-off-text="Blocked" data-off-color="danger" data-on-color="success">
                </div>
              </div> --}}

            </div>
            <!-- /.card-body -->
            <div class="card-footer">
              <button type="submit" class="btn btn-info float-right">Save</button>
            </div>
            <!-- /.card-footer -->
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
</div>