<script src="https://unpkg.com/ionicons@5.2.3/dist/ionicons.js"></script>
{{>admin-sidebar}}
<section class="content">
    <div class="container-fluid">
        <div class="row mt-2">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">List of all Stores</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Store Name</th>
                                    <th>Company</th>
                                    <th>Phone</th>
                                    <th>Address</th>
                                    <th>VAT Number</th>
                                    <th>Active</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each stores}}
                                <tr>
                                    <td>{{this.storename}}</td>
                                    <td>{{this.companyname}}</td>
                                    <td>{{this.mobile}}</td>
                                    <td> {{this.address}}</td>
                                    <td>{{this.vat_number}}</td>
                                    <td class="d-inline"><input type="checkbox" name="storecontrol" id="{{this._id}}" {{#if
                                            this.active}} checked {{/if}}data-bootstrap-switch data-on-text="Active"
                                            data-off-text="Blocked" data-off-color="danger" data-on-color="success">
                                    </td>
                                    <td><a href="editStore/{{this._id}}" class="pl-1 pr-1">
                                            <ion-icon name="receipt-outline"></ion-icon>
                                        </a><a href="" class="pr-1">
                                            <ion-icon name="trash-outline"></ion-icon>
                                        </a></td>
                                </tr>

                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
    </div>
</section>
</div>