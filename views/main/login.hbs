<div class="account">
    <div class="container">
        <h1>{{{t "account.account"}}}</h1>

        <div class="account_grid">
            <div class="col-md-6 login-right">
                <form action="login" id="login" method="POST">

                    <span>{{{t "account.username"}}}</span>
                    <input type="text" name="mobile" id="mobile">

                    <span>{{{t "account.password"}}}</span>
                    <input type="password" name="password" id="password">
                    <div class="word-in">
                        <a class="forgot" href="#">{{{t "account.forgetpassword"}}}</a>
                        <input type="submit" value="{{{t "account.login"}}}">
                    </div>
                    <div id="login-message">
                        <span id="login-status" class="d-flex mt-5 align-self-center"></span>
                    </div>
                </form>
            </div>
            <div class="col-md-6 login-left">
                <h4>{{{t "account.newcustomers"}}}</h4>
                <p>{{{t "account.textforcreatenewcustomer"}}}</p>
                <a class="acount-btn" href="signup">{{{t "account.createanaccount"}}}</a>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>

